{
  "include": [
    "ts/**/*",
    // Is required to load `svg` files as a module in the editor
    "node_modules/@woltlab/editor/types.d.ts"
  ],
  "exclude": [
    "ts/WoltLabSuite/WebComponent.*",
    "ts/WoltLabSuite/WebComponent/**"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "target": "ES2022",
    "module": "amd",
    "rootDir": "ts/",
    "outDir": "wcfsetup/install/files/js/",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "importHelpers": true,
    "newLine": "lf",
    "paths": {
      "*": [
        "./ts/*"
      ]
    }
  }
}
